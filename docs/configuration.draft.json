{
	"input": { 
		"assemblyFiles": [
			"../tests/Clr2Ts.Transpiler.Tests.SampleAssembly/bin/netstandard2.0/Clr2Ts.Transpiler.Tests.SampleAssembly.dll"
		]
	},
	"options": {
		"typeFilters": [
			{
				"subTypeOf": ["ISample1", "ISample2"]
			},
			{
				"subTypeOf": ["ISample3"]
			}
		],
		"customTypeMaps": [
			{ "SampleBase": "@library/sample-base.ts" },
			{ "OtherBase": "@library/other-base.ts" }
		],
		"classDecorators": [
			{ 
				"if": { "subTypeOf": "SampleBase" }, 
				"decorator": "requestTypeName()", 
				"params": ["{TypeNamespace}.{TypeName}, {TypeAssembly}"], 
				"import": "@library" 
			}
		],
		"propertyDecorators": [
			{ 
				"if": null,
				"decorator": "requestProperty", 
				"params": ["{PropertyName}"],
				"import": "@library"
			}
		],
		"strategies": {
			"camelCaseStrategy": true
		}
	},
	"log": {
		"console": true
	},
	"output": {
		"clipboard": true,
		"bundledFile": "C:/temp/bundled.ts",
		"files": {
			"directory": "C:/temp/output",
			"mimicNamespacesWithSubdirectories": false
		}
	}
}